<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rl_item_motel_detail_review_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_item_motel_detail_review_comment_profile"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="centerCrop" />


                <TextView
                    android:id="@+id/tv_item_motel_detail_review_comment_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@id/img_item_motel_detail_review_comment_profile"
                    android:text="Luong VÄ©nh Khang" />

                <TextView
                    android:id="@+id/tv_item_motel_detail_review_comment_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@id/tv_item_motel_detail_review_comment_profile"
                    android:layout_marginEnd="5dp"
                    android:text="12/12/2017 12:12:12"
                    android:textColor="#adadad" />


                <TextView
                    android:id="@+id/tv_item_motel_detail_review_comment_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/tv_item_motel_detail_review_comment_profile"
                    android:layout_below="@id/tv_item_motel_detail_review_comment_profile"
                    android:layout_margin="5dp"
                    android:text="2313213" />

                <TextView
                    android:id="@+id/tv_item_motel_detail_review_comment_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/tv_item_motel_detail_review_comment_content"
                    android:layout_below="@id/tv_item_motel_detail_review_comment_content"
                    android:layout_marginStart="0dp"
                    android:text="Like" />

                <TextView
                    android:id="@+id/tv_item_motel_detail_review_comment_reply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/tv_item_motel_detail_review_comment_like"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@id/tv_item_motel_detail_review_comment_like"
                    android:text="Reply" />

            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_item_motel_detail_review_comment_reply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_item_motel_detail_review_comment"
                android:layout_marginStart="20dp" />

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>

