<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/ll_item_favorite_motel_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textSize="50sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="ahihi" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorListViewBackground"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp">

        <LinearLayout
            android:id="@+id/ll_item_favorite_motel_fore"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/custom_listview_style"
            android:padding="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/ll_item_favorite_motel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:background="@drawable/custom_image_holder_style"
                    android:padding="2dp">

                    <ImageView
                        android:id="@+id/img_item_favorite_motel"
                        android:layout_width="120dp"
                        android:layout_height="90dp"
                        android:scaleType="centerCrop" />
                </LinearLayout>


                <TextView
                    android:id="@+id/tv_item_favorite_motel_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/ll_item_favorite_motel"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_toEndOf="@+id/ll_item_favorite_motel"
                    android:text="Motel Name"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/img_item_favorite_motel_price"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_alignTop="@+id/tv_item_favorite_motel_price"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_toEndOf="@+id/ll_item_favorite_motel"
                    android:src="@drawable/price" />

                <TextView
                    android:id="@+id/tv_item_favorite_motel_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/tv_item_favorite_motel_name"
                    android:layout_marginRight="6dp"
                    android:layout_toEndOf="@+id/img_item_favorite_motel_price"
                    android:paddingTop="3dp"
                    android:text="Price"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/img_item_favorite_motel_time"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/img_item_favorite_motel_price"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginTop="3dp"
                    android:layout_toEndOf="@+id/ll_item_favorite_motel"
                    android:paddingTop="2dp"
                    android:src="@drawable/time" />

                <TextView
                    android:id="@+id/tv_item_favorite_motel_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/img_item_favorite_motel_price"
                    android:layout_marginRight="6dp"
                    android:layout_marginTop="2dp"
                    android:layout_toEndOf="@+id/img_item_favorite_motel_price"
                    android:paddingTop="2dp"
                    android:text="Time"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/img_item_favorite_motel_rating"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_alignBottom="@+id/tv_item_favorite_motel_rating"
                    android:layout_alignEnd="@+id/img_item_favorite_motel_time"
                    android:layout_alignStart="@+id/img_item_favorite_motel_price"
                    android:layout_alignTop="@+id/tv_item_favorite_motel_rating"
                    android:src="@drawable/rate" />

                <TextView
                    android:id="@+id/tv_item_favorite_motel_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/tv_item_favorite_motel_time"
                    android:layout_marginRight="6dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/img_item_favorite_motel_time"
                    android:paddingTop="3dp"
                    android:text="Evaluate"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_item_favorite_motel_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignStart="@+id/ll_item_favorite_motel"
                    android:layout_below="@+id/ll_item_favorite_motel"
                    android:layout_marginRight="6dp"
                    android:text="Address"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>